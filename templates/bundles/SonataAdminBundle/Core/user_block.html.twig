{% extends '@!SonataAdmin/Core/user_block.html.twig' %}

{% block user_block %}
    <li class="user-header bg-light-blue">
        <img src="/img/default_avatar.png" class="img-circle" alt="Avatar">
        <p>{{ app.user.username }}</p>
    </li>


    <li class="user-footer">
        <div class="pull-left">
            <a href="{{ path('admin_app_user_edit', {id: app.user.id}) }}" class="btn btn-default btn-flat">
                <i class="fa fa-user"></i>
                Profile
            </a>
        </div>

        <div class="pull-right">
            <a href="{{ path('app_logout') }}" class="btn btn-default btn-flat">
                <i class="fa fa-sign-out fa-fw"></i>
                Logout
            </a>
        </div>
    </li>
{% endblock %}
